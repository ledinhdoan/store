<%= form_for @product, remote: true do |f| %>
  <%= f.label "Tao san pham" %><br>
  <%= f.text_field :name, placeholder: "nhap ten", maxlength: 100, class: "form-control" %><br/>
  <%= f.select :category_id, options_for_select(Category.all.map{|cate| [cate.name, cate.id]}) %>
  <%= f.text_area :details, placeholder: "noi dung", maxlength: 100, class: "form-control" %><br/>
  <%= f.text_area :trademark, placeholder: "Thuong hieu", maxlength: 100, class: "form-control" %><br/>
  <%= f.text_area :nong_do, placeholder: "Nong do", maxlength: 100, class: "form-control" %><br/>
  <%= f.text_area :time_save, placeholder: "Do luu huong", maxlength: 100, class: "form-control" %><br/>
  <%= f.text_area :toa_huong, placeholder: "Do toa huong", maxlength: 100, class: "form-control" %><br/>
  <%= f.text_area :thoi_diem_dung, placeholder: "Thoi diem dung", maxlength: 100, class: "form-control" %><br/>
  <%= f.text_area :mui_dac_trung, placeholder: "Mui dac trung", maxlength: 100, class: "form-control" %><br/>
  <%= f.text_area :style, placeholder: "Phong cach", maxlength: 100, class: "form-control" %><br/>
  <%= f.number_field :cost, placeholder: 100, class: "form-control"%><br/>
  <%= f.file_field :image, id: "file-upload"%>
  <%= f.submit "Save" %>
<% end %>
