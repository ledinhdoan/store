<div id="all">
  <div id="content">
    <div class="container">
      <div class="col-md-9">
        <div class="row" id="productMain">
          <div class="col-sm-12">
            <div id="mainImage">
              <%= image_tag @product.image, class: "img-responsive" %>
            </div>
            <div class="ribbon sale">
              <div class="theribbon">NEW</div>
              <div class="ribbon-background"></div>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="box">
              <h2 class="text-left">Nước hoa <%= @product.name %> <%= @product.the_tich %> ml</h2>
              <h3><%= @product.cost %>đ</h3>
              <label>Danh mục: Nước hoa Charme <%= @product.category.name %></label></p>
              <label>Thể Tích: <%= @product.the_tich %> ml</label></p>
              <label>Loại: Nước hoa <%= @product.category.name %></label></p>
              <label>Nồng độ: <%= @product.nong_do %></label></p>
              <label>Độ lưu hương: <%= @product.time_save %></label></p>
              <label>Độ tỏa hương: <%= @product.toa_huong %></label></p>
              <label>Thời điểm khuyên dùng: <%= @product.thoi_diem_dung %></label></p>
              <label>Mùi hương đặc trưng: <%= @product.mui_dac_trung %></label></p>
              <label>Phong cách: <%= @product.style %></label></p>
              <label>Nhóm hương: <%= @product.nhom_huong %></label></p>
              <p class="text-center buttons">
                <a href="https://www.facebook.com/NuocHoaCharmeDNA" target="_blank"
                  class="btn btn-primary"><i class="fa fa-comment"></i>Liên hệ</a>
                <!-- <a href="basket.html" class="btn btn-default"><i class="fa fa-heart"></i> Add to wishlist</a> -->
              </p>
              <% if user_signed_in? %>
                <%= link_to "edit", edit_product_path(@product), class: "btn btn-default" %>
                <%= link_to "delete", product_path(@product), method: :delete, data: {confirm: "sure?"},
                  class: "btn btn-danger" %>
              <% end %>
            </div>
          </div>
        </div>
