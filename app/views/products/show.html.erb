          </div>
          <div class="panel-body">
            <% Product.all.limit(4).each do |product| %>
              <%= link_to product_path(product) do %>
                <div class="row">
                  <%= image_tag(product.image, class: "image-noi-bat") %>Nước hoa
                  <%= product.name %> <%= product.cost %>đ
                </div>
              <% end %>
              <hr></hr>
            <% end %>
          </div>
        </div>
