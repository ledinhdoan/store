            <div id="get-inspired" class="owl-carousel owl-theme">
              <% Product.all.each do |product| %>
              <div class="item">
                <%= link_to image_tag(product.image, class: "img-responsive"), product_path(product) %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
